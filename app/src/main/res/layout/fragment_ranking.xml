<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_ranking_naglowek_lp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:background="@drawable/naglowektabelimaly"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Miejce" />
        <TextView
            android:id="@+id/tv_ranking_naglowek_NazwaGracza"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="9"
            android:background="@drawable/naglowektabeliduzy"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Nazwa gracza" />
        <TextView
            android:id="@+id/tv_ranking_naglowek_liczbaPunktow"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:background="@drawable/naglowektabeliduzy"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Punkty" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_fragment_ranking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp" />


</LinearLayout>