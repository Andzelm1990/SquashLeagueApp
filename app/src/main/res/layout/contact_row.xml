<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="0dp"
    android:padding="2dp"
    android:orientation="horizontal"
    android:background="@drawable/przycisk1"
    app:circularflow_radiusInDP="30">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_home_avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/tomek"
        android:padding="2dp"
        app:riv_oval="true"
        android:background="@drawable/circle_frame"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="3"
            android:text="Nowy gracz - Tomek"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginEnd="10dp"
            android:textSize="12dp"
            android:layout_weight="5"
            android:text="Witamy nowego gracza w naszej społeczności. Mamy nadzieje że będzie się z nami dobrze bawił i zawsze będzie wspierał nasze dążenie do unowocześniania tej aplikacji. Bardzo dziękujemy jemu i wszystkim zaangarzowanym w ten projekt." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="" />

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/blue"
                android:layout_marginEnd="10dp"
                android:textSize="10dp"
                android:text="Read More" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>